rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 允許公開讀取群組統計
    match /groups/{groupId} {
      allow read: if true;
      // 只有管理員可以刪除群組
      allow delete: if request.auth != null && request.auth.token.email == 'cyy25121@gmail.com';
      // 其他寫入操作禁止（由後端 Functions 處理）
      allow create, update: if false;
      
      match /members/{memberId} {
        allow read: if true;
        allow write: if false;
      }
      
      match /stickers/{stickerId} {
        allow read: if true;
        allow write: if false;
      }
    }
    
    // 系統設定：只有管理員可以讀寫
    match /settings/{settingId} {
      allow read: if request.auth != null && request.auth.token.email == 'cyy25121@gmail.com';
      allow write: if request.auth != null && request.auth.token.email == 'cyy25121@gmail.com';
    }
  }
}