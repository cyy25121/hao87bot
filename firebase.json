{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs22"
    }
  ],
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/sticker-url",
        "function": "getStickerUrl"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
